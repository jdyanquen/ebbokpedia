<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:image field='logo' src='resources/logo.png' />

	<ui:style>
		.wrap {
			clear: both;
			margin: 0;
			padding: 0;
			width: 977px;
		}
		
		@sprite .logo {
			float: left;
			gwt-image: 'logo';
			padding-left: 50px;
		}
		
		.search {
			float: right;
			padding-top: 20px;
			padding-right: 50px;
		}
		
		.component {
			padding-left: 10px;
		}
	</ui:style>

	<g:HTMLPanel styleName='{style.wrap}'>
		<span class='{style.logo}' />
		<span class='{style.search}'>
			<span class='{style.component}'>Find by keywords</span>
			<span class='{style.component}'><g:TextBox ui:field="searchField" width="300px" /></span>
			<span class='{style.component}'><g:Button ui:field="searchButton" text="Search" /></span>
		</span>
	</g:HTMLPanel>
</ui:UiBinder>
